{
    "manifest_version": 3,
    "name": "WAI Sponsorship extension",
    "description": "Dummy for testing purposes",
    "version": "1.0",
    "icons": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    },
    "content_scripts": [
      {
        "js": [
          "linkedin.js"
        ],
        "matches": [
          "https://www.linkedin.com/in/*"
        ]
      }
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "action": {
      "default_icon": {
        "16": "assets/icon-16.png",
        "32": "assets/icon-32.png",
        "48": "assets/icon-48.png",
        "128": "assets/icon-128.png"
      },
      "default_popup": "src/popups/default/homePage.html"
    },
    "permissions": [
      "identity",
      "activeTab",
      "scripting",
      "tabs"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+B",
          "mac": "Command+B"
        }
      }
    }
  }
  